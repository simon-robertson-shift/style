{
    "include": ["./*.ts"],
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "allowUnreachableCode": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ES2020"],
        "module": "ES2020",
        "moduleResolution": "node",
        "removeComments": true,
        "strict": true,
        "target": "ES2020"
    }
}
